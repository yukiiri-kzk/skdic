<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-light bg-light">
    <a class="h3 navbar-brand" href="/">SKDIC</a>
      <% if logged_in? %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsupportedcontent">
          <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse justify-content-end" id="navbarsupportedcontent">
          <ul class="navbar-nav">
            <li class="nav-item border-left">
              <%= link_to user_path(current_user), class: 'nav-link' do %>
                <i class="mr-1 fas fa-user"></i>ユーザー
              <% end %>
            </li>
            <li class="nav-item border-left">
              <%= link_to profile_show_user_path(current_user), class: 'nav-link' do %>
                <i class="fas fa-address-card"></i>マイプロフィール
              <% end %>
            </li>
            <li class="nav-item border-left">
              <%= link_to new_item_path(current_user), class: 'nav-link' do %>
                <i class="fas fa-gift"></i>アイテム登録
              <% end %>
            </li>
            <li class="nav-item border-left">
              <%= link_to items_path(current_user), class: 'nav-link' do %>
                <i class="fas fa-registered"></i>出品アイテム
              <% end %>
            </li>
            <li class="nav-item border-left">
              <%= link_to chatrooms_path(current_user), class: 'nav-link' do %>
                <i class="mr-1 fas fa-comments"></i>ルーム一覧
              <% end %>
            </li>
            <li><%= link_to "ログアウト", logout_path(current_user), method: :delete, class: "ml-sm-5 btn btn-outline-primary" %></li>
          </ul>
        </div>
    
      <% else %>
        <div class="mr-auto"></div>
        <div>
          <a href="<%= signup_path(@user)%>" class="btn btn-danger mx-2 py-0">新規登録</a>
          <a href="<%= login_path(@user) %>" class="btn btn-outline-primary py-0">ログイン</a>
        </div>
      <% end %>
  </nav>
</header>