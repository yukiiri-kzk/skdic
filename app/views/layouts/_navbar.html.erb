<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-light bg-light">
    <a class="h3 navbar-brand" href="/">SKDIC</a>
      <% if logged_in? %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsupportedcontent">
          <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse justify-content-end" id="navbarsupportedcontent">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to user_path(current_user), class: 'nav-link' do %>
                <i class="mr-1 fas fa-user"></i>ユーザー
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to profile_show_user_path(current_user), class: 'nav-link' do %>
                <i class="mr-1 far fa-id-badge"></i>マイプロフィール
              <% end %>
            </li>
            <li class="nav-item"><%= link_to "アイテム登録", new_item_path(current_user), class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to "出品アイテム", items_path(current_user), class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to "出品ルーム", chatrooms_path(current_user), class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to "受取ルーム", other_chatrooms_path(current_user), class: 'nav-link' %></li>
            <li><%= link_to "ログアウト", logout_path(current_user), method: :delete, class: "ml-sm-5 btn btn-outline-primary" %></li>
          </ul>
        </div>
    
      <% else %>
        <div class="mr-auto"></div>
        <div>
          <a href="<%= signup_path(@user)%>" class="btn btn-danger mx-2 py-0">新規登録</a>
          <a href="<%= login_path(@user) %>" class="btn btn-outline-primary py-0">ログイン</a>
        </div>
      <% end %>
  </nav>
</header>