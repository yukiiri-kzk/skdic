<h2 class="mb-5">アイテム情報</h2>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    
    <p class="h5">出品画像</p>
    <div class="mb-3 d-flex justify-content-center">
      <%= image_tag @item.image.url, size: "250x250" if @item.image? %>
    </div>
    
    <p class="h5">アイテム名</p>
    <div class="card mb-3">
      <div class="card-body p-1">
        <p class="h5"><%= @item.name %></p>
      </div>
    </div>
    
    <p class="h5">出品者</p>
    <div class="card mb-3">
      <div class="card-body p-1">
        <p class="h5"><%= link_to @item.user.name, profile_show_user_path(@item.user) %></p>
      </div>
    </div>
    
    <p class="h5">カテゴリー</p>
    <div class="card mb-3">
      <div class="card-body p-1">
        <p class="h5"><%= @item.category.name %></p>
      </div>
    </div>
    
    <p class="h5">地域</p>
    <div class="card mb-3">
      <div class="card-body p-1">
        <p class="h5"><%= @item.area.name %></p>
      </div>
    </div>
    
    <p class="h5 mt-3">アイテム説明</p>
    <div class="card mb-3" style="height: 15rem;">
      <div class="card-body">
        <%= simple_format(@item.explanation) %>
      </div>
    </div>
    
    <% if current_user == @item.user %>
      <%= link_to "編集する", edit_item_path(@item), class: "offset-sm-5 mt-4 mb-3 btn btn-outline-primary rounded-pill" %>
    <% end %>
  </div>
</div>