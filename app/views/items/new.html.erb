<h2 class="mb-5">アイテム登録</h2>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    
    <%= form_with(model: @item, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.label :image, '出品画像' %>
        <div class="text-center mb-2">
          <%= image_tag @item.image.url, class: "mb-2", size: "250x250" if @item.image? %>
          <%= f.file_field :image %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :name, 'アイテム名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :category_id, 'カテゴリー' %>
        <%= f.select :category_id, Category.all.map{|category| [category.name, category.id]}, { include_blank: '選択してください'}, {class: "form-control", required: true} %>
      </div>
      
      <div class="form-group">
        <%= f.label :area_id, 'キャンパス' %>
        <%= f.select :area_id, Area.all.map{|area| [area.name, area.id]}, { include_blank: '選択してください'}, { class: "form-control", required: true} %>
      </div>
      
      <div class="form-group">
        <%= f.label :explanation, 'アイテム説明' %>
        <%= f.text_area :explanation, class: 'form-control', size: "100x10" %>
      </div>
      
      <div class="d-flex justify-content-center">
        <%= f.submit '登録する', class: 'mt-4 mb-3 btn btn-primary rounded-pill'%>
      </div>
      
    <% end %>
    
  </div>
</div>
