<h2 class="mb-5">アイテム情報変更</h2>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    
    <%= form_with(model: @item, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="d-flex justify-content-center">
        <%= image_tag @item.image.url, size: "250x250" if @item.image? %>
      </div>
      <div class="field d-flex justify-content-center my-2">
        <%= f.file_field :image %>
      </div>
      
      <div class="form-group">
        <%= f.label :name, 'アイテム名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :explanation, 'アイテム説明' %>
        <%= f.text_area :explanation, class: 'form-control', size: "100x10" %>
      </div>
      
      <div class="d-flex justify-content-center">
        <%= f.submit '変更する', class: 'mt-4 mb-3 btn btn-primary rounded-pill'%>
      </div>
      
    <% end %>
    
  </div>
</div>