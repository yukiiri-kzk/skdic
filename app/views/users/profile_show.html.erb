<h2 class="my-5">マイプロフィール</h2>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <div class="d-flex justify-content-center">
      <%  if @user.image? %>
        <%= image_tag @user.image.url, class: "rounded-circle", size: "250x250" %>
      <% else%>
        <img class="mr-2 rounded-circle" src="<%= gravatar_url(@user, { size: 250 }) %>" alt="">
      <% end %>
    </div>
    <p class="h3 mt-3 mb-5 text-center"><%= @user.name %></p>
    
    <p class="h5 mt-5">自己紹介</p>
    <div class="card mb-5" style="height: 15rem;">
      <div class="card-body">
        <%= simple_format(@user.self_introduction) %>
      </div>
    </div>
    
    <% if current_user.id == @user.id %>
      <div class="d-flex justify-content-center">
        <%= link_to "編集する", profile_edit_user_path(@user), class: "mb-3 btn btn-outline-primary rounded-pill" %>
      </div>
    <% end %>
    
  </div>
</div>