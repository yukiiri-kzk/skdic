<h2 class="mb-5">マイプロフィール</h2>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <div class="d-flex justify-content-center">
      <%= image_tag @user.image.url, size: "250x250" if @user.image? %>
    </div>
    <p class="h3 mt-3 mb-5 text-center"><%= @user.name %></p>
    
    <p class="h5 mt-5">自己紹介</p>
    <div class="card" style="height: 15rem;">
      <div class="card-body">
        <%= simple_format(@user.self_introduction) %>
      </div>
    </div>
    
    <% if current_user.id == @user.id %>    
      <%= link_to "編集する", profile_edit_user_path(@user), class: "offset-sm-5 my-3 btn btn-outline-primary rounded-pill" %>
    <% end %>
    
  </div>
</div>